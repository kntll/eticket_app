<%= form_for @ticket, :html => {:multipart => true} do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.file_field :pdf %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :event_id %><br>
    <%= f.collection_select :event_id, Event.all, :id, :name %> of <%= link_to 'voeg eerst nieuw evenement toe', new_event_path %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
